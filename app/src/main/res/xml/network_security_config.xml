<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Izinkan cleartext untuk localhost -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Untuk Android Emulator -->
    </domain-config>

    <!-- Izinkan cleartext untuk domain produksi -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">simpad.novarentech.web.id</domain>
    </domain-config>
</network-security-config>